<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.fm.dao.UserBehaviorDao">
    
    <resultMap id="BaseResultMap" type="com.rabbiter.fm.model.UserBehavior">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="idle_id" jdbcType="INTEGER" property="idleId" />
        <result column="behavior_type" jdbcType="INTEGER" property="behaviorType" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>
    
    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM sh_user_behavior WHERE user_id = #{userId}
    </select>
    
    <select id="findByIdleId" resultMap="BaseResultMap">
        SELECT * FROM sh_user_behavior WHERE idle_id = #{idleId}
    </select>
    
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM sh_user_behavior
    </select>
    
    <insert id="insert" parameterType="com.rabbiter.fm.model.UserBehavior">
        INSERT INTO sh_user_behavior (user_id, idle_id, behavior_type, create_time)
        VALUES (#{userId}, #{idleId}, #{behaviorType}, #{createTime})
    </insert>
    
</mapper> 