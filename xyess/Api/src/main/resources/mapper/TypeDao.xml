<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rabbiter.fm.dao.TypeDao">
    <resultMap id="BaseResultMap" type="com.rabbiter.fm.model.TypeModel">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, description, create_time
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from sh_type
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="listByCondition" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from sh_type
        limit #{begin}, #{nums}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from sh_type
        where id = #{id,jdbcType=BIGINT}
    </delete>

    <insert id="insert" parameterType="com.rabbiter.fm.model.TypeModel">
        insert into sh_type (name, description, create_time)
        values (#{name,jdbcType=VARCHAR}, 
                #{description,jdbcType=VARCHAR}, 
                #{createTime,jdbcType=TIMESTAMP})
    </insert>

    <update id="updateByPrimaryKey" parameterType="com.rabbiter.fm.model.TypeModel">
        update sh_type
        set name = #{name,jdbcType=VARCHAR},
            description = #{description,jdbcType=VARCHAR}
        where id = #{id,jdbcType=BIGINT}
    </update>

    <!-- 获取总数 -->
    <select id="getTotal" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM sh_type
    </select>
</mapper>